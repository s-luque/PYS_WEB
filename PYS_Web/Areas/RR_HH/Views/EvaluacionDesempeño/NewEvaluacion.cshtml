
@model PYS_Entidad.E_TA_EVAL_DESE
@{
    Layout = null;
}

<script>
    function frm_buscar_COD_CCAR() {
        $.ajax({
            type: "post", url: "@Url.Action("Ayuda_Cargo", "AyudaBusqueda", new { Area = "Aprobaciones" })",
            success: function (res) {
                $("#ViewModal2").html(res);
                $("#btnViewModal2").click();
            },
            error: function (res) {
                alertify.error("<strong>Error de conexión.</strong>");
            }
        });
    };
    function frm_buscar_TIP_EVAL() {
        $.ajax({
            type: "post", url: "@Url.Action("Ayuda_Evaluacion", "AyudaBusqueda", new { Area = "Aprobaciones" })",
            success: function (res) {
                $("#ViewModal2").html(res);
                $("#btnViewModal2").click();
            },
        error: function (res) {
            alertify.error("<strong>Error de conexión.</strong>");
        }
    });
    };
</script>

@using (Html.BeginForm("Guardar", "EvaluacionDesempeño", FormMethod.Post, new { id = "Frm_Evaluacion_Desempeño" }))
{
    <div class="modal-dialog" style="border-radius:10px;">
        <div class="modal-content">
            <div class="modal-header text-center">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true" id="btnCerrarEvaluacion">&times;</button>
                <h3>Nuevo registro</h3>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            @Html.Label("Código Evaluación", new { @class = "control-label" }) 
                                @Html.TextBoxFor(x => x.FS_COD_EVAL_DESE,
                               new { @class = "form-control  validaCodigo_3", @id = "TXT_FS_COD_EVAL_DESE" })                            
                            @Html.ValidationMessageFor(x => x.FS_COD_EVAL_DESE, null,
                           new { @class = "label label-alert help-block" })
                        </div>
                    </div>
                    <div class="col-sm-8">
                        <div class="form-group">
                            @Html.Label("Observación", new { @class = "control-label" })
                            @Html.TextBoxFor(x => x.FS_DES_OBSE, new { @class = "form-control", @id = "TXT_FS_DES_OBSE" })
                            @Html.ValidationMessageFor(x => x.FS_DES_OBSE, null, new { @class = "label label-alert help-block" })
                        </div>
                    </div>
                    <div class="col-sm-12">
                        <div class="form-group">
                            @Html.Label("Descripción Evaluación", new { @class = "control-label" })
                            @Html.TextBoxFor(x => x.FS_DES_EVAL_DESE, new { @class = "form-control", @id = "TXT_FS_DES_EVAL_DESE" })
                            @Html.ValidationMessageFor(x => x.FS_DES_EVAL_DESE, null, new { @class = "label label-alert help-block" })
                           
                        </div>
                    </div>
                     <div class="col-sm-12">  <!-- Alineación, col-sm-12-->
                        <div class="col-md-4">
                            <div class="form-group">
                                @Html.Label("Código Cargo", new { @class = "control-label" })
                                <div class="input-group">
                                    @Html.TextBoxFor(x => x.FS_COD_CCAR, new { @class = "form-control input-md search-query validaCodigo_3", @id = "TXT_FS_COD_CCAR" })
                                    <span class="input-group-btn">
                                        <button id="btnBuscarCodCcar" class="btn btn-transparent btn-sm cancel btn-buscar" data-toggle="tooltip" 
                                                title="Buscar" type="button" onclick="frm_buscar_COD_CCAR();" disableValidation="true">
                                            <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
                                        </button>
                                    </span>
                                </div>
                                @Html.ValidationMessageFor(x => x.FS_COD_CCAR, null, new { @class = "label label-alert help-block" })
                            </div>
                        </div>
                        <div class="col-sm-7">
                            <div class="form-group">
                                <label for="TXT_FS_DES_CCAR" style="visibility:hidden" class = "control-label">space</label>
                                <input class="form-control" id="TXT_FS_DES_CCAR" readonly>
                            </div>
                        </div>
                    </div>
                        <div class="col-sm-12">
                            <div class="col-md-4">
                                <div class="form-group">
                                    @Html.Label("Tipo Evaluación", new { @class = "control-label" })
                                    <div class="input-group">
                                        @Html.TextBoxFor(x => x.FS_TIP_EVAL, new { @class = "form-control  input-md search-query validaCodigo_4", @id = "TXT_FS_TIP_EVAL" })
                                        <span class="input-group-btn">
                                            <button id="btnBuscarTipEval" class="btn btn-transparent btn-sm btn-buscar cancel" 
                                                    data-toggle="tooltip" title="Buscar" type="button" 
                                                    onclick="frm_buscar_TIP_EVAL();" disableValidation="true">
                                                <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
                                            </button>
                                        </span>
                                    </div>
                                    @Html.ValidationMessageFor(x => x.FS_TIP_EVAL, null, new { @class = "label label-alert help-block" })
                                </div>
                            </div>
                            <div class="col-sm-7">
                                <div class="form-group">
                                    <label for="TXT_FS_DES_TIPO_EVAL" style="visibility:hidden" class = "control-label">space</label>
                                    <input class="form-control" id="TXT_FS_DES_TIPO_EVAL" readonly>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-12">
                            <div class="modal-footer a-center">
                                <div class="btn-group">
                                    <button id="btnGuardar" type="submit" class="btn btn-default">
                                    <span class="glyphicon glyphicon-floppy-disk glyphicon-guardar"></span></button>
                                    <button class="btn btn-default cancel" name="cancel" value="Cancel" id="btnCancelar" data-dismiss="modal">
                                    <span class="glyphicon glyphicon-remove glyphicon-cancelar"></span></button>
                                </div>
                            </div>
                        </div>
                    </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="ViewModal2" tabindex="-1" role="dialog" aria-hidden="true" data-backdrop="static" data-keyboard="false">
        <!--- Body del modal de tabla aquí-->
    </div>
        <div class="col-sm-2 a-left no-padd">
            <button data-toggle="modal" data-target="#ViewModal2" id="btnViewModal2" hidden="hidden" type="button">Mostrar</button>
        </div>

@Scripts.Render("~/bundles/jsValidacion")

 <script>
     $(function() {

         // Función - Recibe aviso de existencia de Código en tabla
         function validar_existencia_FS_COD_EVAL_DESE() {
             $.ajax({
                 type: 'GET',
                 url: "@Url.Action("Index", "EvaluacionDesempeño")",
                 success: function (data) {
                     var valCampo = $('#TXT_FS_COD_EVAL_DESE').val();
                     // Busca coincidencia
                     var busColumna = $(data).find('#tblEvaluacionDesempeño > tbody > tr > td.col-cod-eval-dese:contains("' + valCampo + '")');
                     if (busColumna.html() == valCampo) {
                         alertify.confirm('Código ya existe en tabla, ¿desea actualizarlo?', function (e) {
                             if (e) {
                                 $('#ViewModal').modal('toggle');
                                 $('#ViewModal').one('hidden.bs.modal', function (e) {
                                     Editar(valCampo);
                                 })
                             }
                             else {
                                 return false;
                             }
                         });
                     }
                            },
                 error: function (res) {
                     alertify.error("<strong>Error de conexión.</strong>");
                 }
             });

         }
         // Imprimir descripción de Código CARGO
         function select_FS_COD_CCAR() {
             $.ajax({
             type: 'GET',
             url: "@Url.Action("Ayuda_Cargo", "AyudaBusqueda", new { Area = "Aprobaciones" })",
                 success: function (data) {
                     var codCampo = "#TXT_FS_COD_CCAR";
                     var desCampo = "#TXT_FS_DES_CCAR";
                     var nomForm = "#Frm_Evaluacion_Desempeño";

                     var valCampo = $(codCampo).val();
                     var busFila = $(data).find('tbody>tr.row-cate-carg:contains("' + valCampo + '")');
                     var colCero = $(busFila).children("td:eq(0)");
                     var colUno = $(busFila).children("td:eq(1)");          
                     if ($.trim($(colUno).html()) == '' || ($.trim($(colCero).html()) != valCampo) || $.trim(valCampo) == '') {
                         $(nomForm).validate().element(codCampo);
                         $(desCampo).val("");
                     }
                     else {
                         $(desCampo).val(colUno.html());
                     }
             },
         error: function (res) {
             alertify.error("<strong>Error de conexión.</strong>");
         }
     });
     return false;
     }

     // Imprimir descripción de Código TIPO EVAL
     function select_FS_TIP_EVAL() {
         $.ajax({
             type: 'GET',
             url: "@Url.Action("Ayuda_Evaluacion", "AyudaBusqueda", new { Area = "Aprobaciones" })",
             success: function (data) {
                 var codCampo = "#TXT_FS_TIP_EVAL";
                 var desCampo = "#TXT_FS_DES_TIPO_EVAL";
                 var nomForm = "#Frm_Evaluacion_Desempeño";

                 var valCampo = $(codCampo).val();
                 var busFila = $(data).find('tbody>tr.row-tipo-eval:contains("' + valCampo + '")');
                 var colCero = $(busFila).children("td:eq(0)");
                 var colUno = $(busFila).children("td:eq(1)");               
                 if ($.trim($(colUno).html()) == '' || ($.trim($(colCero).html()) != valCampo) || $.trim(valCampo) == '') {
                     $(nomForm).validate().element(codCampo);
                     $(desCampo).val("");
                 }
                 else {
                     $(desCampo).val(colUno.html());
                 }
             },
         error: function (res) {
             alertify.error("<strong>Error de conexión.</strong>");
         }
     });
     return false;
     }


     // Obtener la desc. correspondiente al Código Documento al presionar Enter y verificar si ya existe en tabla
     $('#TXT_FS_COD_EVAL_DESE').keydown(function (e) {
         if (e.keyCode == 13) {
             validar_existencia_FS_COD_EVAL_DESE();
         }
     });

     $('#TXT_FS_COD_CCAR').keydown(function (e) {
                        if (e.keyCode == 13) {
                            select_FS_COD_CCAR();
                        }
     });
     $('#TXT_FS_TIP_EVAL').keydown(function (e) {
         if (e.keyCode == 13) {
             select_FS_TIP_EVAL();
         }
     });

         // Submit de formulario
     $('#Frm_Evaluacion_Desempeño').submit(function () {
         var form = $(this);
         validar_existencia_FS_COD_EVAL_DESE();
         if (form.validate() && $(form).valid()) {
             form.ajaxSubmit({
                 dataType: 'JSON',
                 type: 'POST',
                 url: form.attr('action'),
                 success: function (res) {
                     if (res.response) {
                         alertify.success("<strong>Registrado correctamente.</strong>");
                         Cancelar();
                         $("#btnCerrarEvaluacion").click();
                         $(".modal-backdrop").removeClass();
                     }
                     else {
                         alertify.error("No se pudo registrar");
                         return false;
                     }
                 },
                 error: function (jqXHR, textStatus, errorThrown) {
                     alertify.error("<strong>" + errorThrown + "</strong>");
                 }
             });
         }
         return false;
     });
     })
                </script>
}